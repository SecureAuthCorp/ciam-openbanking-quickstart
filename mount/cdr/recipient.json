{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/tmp/mdr.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Verbose",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "/tmp/cdr-mdr-web.log" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "CDR.DataRecipient.Web"
    }
  },
  "ConsumerDataStandardsSwagger": "https://consumerdatastandardsaustralia.github.io/standards/includes/swagger/cds_banking.json",
  "MockDataRecipient": {
    "Register": {
      "tlsBaseUri": "https://mock-register:7000",
      "mtlsBaseUri": "https://mock-register:7001",
      "oidcDiscoveryUri": "https://mock-register:7000/idp/.well-known/openid-configuration",
      "tokenEndpoint": "https://mock-register:7001/idp/connect/token"
    },
    "SoftwareProduct": {
      "scope": "openid profile bank:accounts.basic:read bank:accounts.detail:read bank:transactions:read common:customer.basic:read introspect_tokens revoke_tokens",
      "jwksUri": "https://datarecipient.mock:9001/jwks",
      "redirectUris": "https://datarecipient.mock:9001/consent/callback,https://datarecipient.mock:9001/consent/callback2",
      "recipientBaseUri": "https://datarecipient.mock:9001"
    },
    "DataHolder": {
      "infosecBaseUri": "https://authorization.cloudentity.com:8443/default/cdr",
      "resourceBaseUri": "https://mock-data-holder:8002",
      "publicBaseUri": "https://mock-data-holder:8000",
      "oidcDiscoveryUri": "https://authorization.cloudentity.com:8443/default/cdr/.well-known/openid-configuration",
      "jwksUri": "https://authorization.cloudentity.com:8443/default/cdr/.well-known/jwks.json",
      "registrationEndpoint": "https://authorization.cloudentity.com:8443/default/cdr/oauth2/register"
    }
  }
}